<Window x:Class="CSVDiff.Views.ExcelExportSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVDiff.Views"
        xmlns:models="clr-namespace:CSVDiff.Models"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=models:ExcelExportSettings, IsDesignTimeCreatable=False}"
        Title="ExcelExportSettingsView" 
        ResizeMode="NoResize"
        SizeToContent="Height"
        Height="300" Width="300" MaxHeight="600">

    <Window.Resources>
        <ObjectDataProvider x:Key="HorizontalAlignmentEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ExcelHorizontalAlignment"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="VerticalAlignmentEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ExcelVerticalAlignment"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Row Height" Margin="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding RowHeight, UpdateSourceTrigger=PropertyChanged}"/>
                <Slider Grid.Column="1" Value="{Binding RowHeight}" Minimum="10" Maximum="100" TickFrequency="0.25" IsSnapToTickEnabled="True"/>
            </Grid>
        </GroupBox>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl Grid.Row="2"
            d:ItemsSource="{d:SampleData}"
            ItemsSource="{Binding ColumnSettings, Mode=OneTime}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ColumnSettings}">
                        <Border Margin="2" Background="{Binding MergeGroupColor, Mode=OneTime}" CornerRadius="5">

                            <Border Margin="8" Background="White" CornerRadius="5">
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <GroupBox Header="Font Size">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Label Content="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}"/>
                                                <Slider Grid.Column="1" Value="{Binding FontSize}" Minimum="6" Maximum="30"/>
                                            </Grid>
                                        </GroupBox>

                                        <GroupBox Header="Column Width" Grid.Row="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBox Text="{Binding ColWidth, UpdateSourceTrigger=PropertyChanged}"/>
                                                <Slider Grid.Column="1" Value="{Binding ColWidth}" Minimum="0" Maximum="200" TickFrequency="0.25" IsSnapToTickEnabled="True"/>
                                            </Grid>
                                        </GroupBox>

                                    </Grid>

                                    <Grid Grid.Row="1" Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Horizontal Alignment" FontSize="10"/>
                                        <TextBlock Grid.Column="2" Text="Vertical Alignment" FontSize="10"/>

                                        <ComboBox Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Source={StaticResource HorizontalAlignmentEnum}}" SelectedItem="{Binding HorizontalAlignment}"/>
                                        <ComboBox Grid.Column="2" Grid.Row="1" ItemsSource="{Binding Source={StaticResource VerticalAlignmentEnum}}" SelectedItem="{Binding VerticalAlignment}"/>
                                    </Grid>

                                    <Grid Grid.Row="2" Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" Content="Bold" IsChecked="{Binding Bold}"/>
                                        <CheckBox Grid.Column="2" Content="Wrap Text" IsChecked="{Binding WrapText}"/>
                                    </Grid>
                                </Grid>
                            </Border>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="4" Margin="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="2" Height="25" Padding="4 0" Content="Accept and Save" Click="AcceptAndSave_Button_Click"/>
            <Button Margin="2" Height="25" Padding="4 0" Content="Accept" Click="Accept_Button_Click"/>
            <Button Margin="2" Padding="4 0" Content="Cancel" Click="Cancel_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
